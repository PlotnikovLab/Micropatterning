// input the following parameters before running the code

int m = ?, n = ?;// the number of fields of view in y and x direction, respectively. 

SetVariableValue("delta", ?);// the size of one FOV, so that the microscope will move by this distance after patterning each FOV.

pattern_stimulation_path = "";// the path where the pattern_stimulation macro is stored, input between the quotation marks.

// note to self: variable = __FILE__ + "pattern_stimulation" can this help with finding the file if the user stores the macro in the same folder as everything else

// parameter section ends


int i,j; // the current row and column, respectively. 
double delta;



for(i = 1; i <= m; i = i + 1)
   {
   if(i % 2 == 1)
      {
      for(j = 1; j <= n; j = j +1)
         {
         if(j < n)
            {
            RunMacro(pattern_stimulation_path); 
            StgMoveXY(delta, 0, 1);
            }
         else
            {
            RunMacro(pattern_stimulation_path); 
            StgMoveXY(0, delta, 1);
            }
         }
      }
   else
      {
      for(j = n; j >= 1; j = j -1)
         {
         if(j > 1)
            {
            RunMacro(pattern_stimulation_path); 
            StgMoveXY(-1*delta, 0, 1);
            }
         else
            {
            RunMacro(pattern_stimulation_path); 
            StgMoveXY(0, delta, 1);
            }
         }
      }
   }
   
   
